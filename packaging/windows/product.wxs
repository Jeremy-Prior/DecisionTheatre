<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
    <Package Name="Decision Theatre"
             Manufacturer="Kartoza"
             Version="$(var.Version)"
             UpgradeCode="A1B2C3D4-E5F6-7890-ABCD-EF1234567890">

        <MajorUpgrade DowngradeErrorMessage="A newer version of Decision Theatre is already installed." />

        <Feature Id="Main" Title="Decision Theatre" Level="1">
            <ComponentGroupRef Id="ProductComponents" />
        </Feature>

        <StandardDirectory Id="ProgramFiles6432Folder">
            <Directory Id="INSTALLFOLDER" Name="Decision Theatre">
                <Component Id="MainExecutable" Guid="*">
                    <File Source="dist\decision-theatre.exe" />
                </Component>
            </Directory>
        </StandardDirectory>

        <ComponentGroup Id="ProductComponents">
            <ComponentRef Id="MainExecutable" />
        </ComponentGroup>
    </Package>
</Wix>
